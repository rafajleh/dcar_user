<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/menu_img_width"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dimen_bill_line">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivDrawerItemIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/menu_profile"/>

        <ImageView
            android:id="@+id/ivDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_dot_red"
            android:visibility="gone"/>
    </FrameLayout>


    <com.elluminati.eber.driver.components.MyFontTextView
        android:id="@+id/tvDrawerItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_bill_margin_two"
        android:text="@string/text_destination"
        android:maxLines="2"
        android:textAlignment="center"
        android:textColor="@color/color_app_text"
        android:textSize="@dimen/size_general_small"/>


</LinearLayout>