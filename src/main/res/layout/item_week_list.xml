<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llWeekMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_bill_margin_two"
    android:paddingTop="@dimen/dimen_bill_margin_two">


    <com.elluminati.eber.driver.components.MyFontTextView
        android:id="@+id/tvWeekStartDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_bill_line"
        android:layout_weight="1"
        android:gravity="center"
        android:text="20 Aug 2017"
        android:textColor="@color/color_app_text"
        android:textSize="@dimen/size_general_small"/>


    <com.elluminati.eber.driver.components.MyFontTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="-"
        android:textColor="@color/color_app_text"
        android:textSize="@dimen/size_general_small"/>


    <com.elluminati.eber.driver.components.MyFontTextView
        android:id="@+id/tvWeekEndDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_bill_line"
        android:layout_weight="1"
        android:gravity="center"
        android:text="26 Aug 2017"
        android:textColor="@color/color_app_text"
        android:textSize="@dimen/size_general_small"/>


</LinearLayout>
