<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/llGoOnLine"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_white_transparent"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_horizontal_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/offline_graphics"/>

        <com.elluminati.eber.driver.components.MyFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:text="@string/msg_go_online_to_receive_trip"
            android:textColor="@color/color_app_text"
            android:textSize="@dimen/size_price"/>
    </LinearLayout>

    <com.elluminati.eber.driver.components.MyFontButton
        android:id="@+id/btnGoOnlineDialog"
        android:layout_width="@dimen/app_button_size"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/selector_round_rect_shape_blue"
        android:text="@string/text_go_online"
        android:textAllCaps="false"
        android:layout_marginBottom="@dimen/bottom_vehicle_sheet_pick_height"
        android:textColor="@color/color_white"
        android:textSize="@dimen/size_general_small"/>

</LinearLayout>