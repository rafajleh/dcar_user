<set xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <objectAnimator
            android:propertyName="alpha"
            android:duration="100"
            android:valueTo="0.5"
            android:valueType="floatType" />
    </item>
    <item>
        <objectAnimator
            android:propertyName="alpha"
            android:duration="100"
            android:valueTo="1.0"
            android:valueType="floatType" />
    </item>
</set>
