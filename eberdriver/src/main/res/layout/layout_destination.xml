<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/toolbar_bg_rounded_bottom"
    android:elevation="@dimen/toolbar_elevation"
    android:orientation="vertical"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:visibility="visible">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/ivPickupDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingBottom="@dimen/activity_horizontal_padding"
            android:paddingEnd="@dimen/dimen_bill_margin_two"
            android:paddingTop="@dimen/activity_horizontal_padding"
            app:srcCompat="@drawable/ic_pickup_dest"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">


            <com.elluminati.eber.driver.components.MyFontTextView
                android:id="@+id/tvMapPickupAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="@dimen/activity_horizontal_padding"
                android:drawablePadding="@dimen/activity_horizontal_padding"
                android:gravity="center_vertical"
                android:padding="@dimen/dimen_bill_margin_two"
                android:singleLine="true"
                android:text="@string/text_pickup_address"
                android:textColor="@color/color_app_text"
                android:textSize="@dimen/size_general_small"/>

            <com.elluminati.eber.driver.components.MyFontTextView
                android:id="@+id/tvMapDestinationAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/activity_horizontal_padding"
                android:layout_marginTop="2dp"
                android:drawablePadding="@dimen/activity_horizontal_padding"
                android:gravity="center_vertical"
                android:padding="@dimen/dimen_bill_margin_two"
                android:singleLine="true"
                android:text="@string/text_destination_address"
                android:textColor="@color/color_app_text"
                android:textSize="@dimen/size_general_small"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llScheduleTrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_bill_line"
        android:visibility="gone">

        <com.elluminati.eber.driver.components.MyFontTextView
            android:id="@+id/tvScheduleTripTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_bill_margin_two"
            android:paddingEnd="@dimen/dimen_bill_line"
            android:paddingStart="@dimen/dimen_bill_line"
            android:paddingTop="@dimen/dimen_bill_margin_two"
            android:text="@string/text_schedule_pickup_time"
            android:textColor="@color/color_black"
            android:textSize="@dimen/size_general_small"/>

    </LinearLayout>
</LinearLayout>




