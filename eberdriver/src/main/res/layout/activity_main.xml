<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/eber_sp"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:visibility="gone"
        android:background="@drawable/imageback"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imglogo"
        android:src="@drawable/eber_logo_small"/>

    </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            tools:context="com.elluminati.eber.driver.MainActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                    <com.elluminati.eber.driver.components.MyFontTextView
                        android:id="@+id/tvSingIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:paddingBottom="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_horizontal_margin"
                        android:text="@string/text_log_in"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/size_general"
                        android:visibility="visible" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:background="@color/color_black" />

                    <com.elluminati.eber.driver.components.MyFontTextView
                        android:id="@+id/tvRegister"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:textStyle="bold"
                        android:paddingBottom="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_horizontal_margin"
                        android:text="@string/text_register"
                        android:textAllCaps="true"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/size_general"
                        android:visibility="visible" />

            </LinearLayout>

            <com.elluminati.eber.driver.components.MyFontTextView
                android:id="@+id/tvChangeLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:text="@string/text_change_language"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/color_black"
                android:textSize="@dimen/size_general"
                android:visibility="visible" />

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/lltxtview"
        android:layout_marginBottom="50dp">


        <TextView
            android:layout_width="wrap_content"
            android:text="@string/LBL_SPECALLY"
            android:textSize="@dimen/size_general"
            android:gravity="center"
            android:textColor="@color/color_black"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="240dp"
            android:layout_height="2dp"
            android:background="@color/color_black" />


        <TextView
            android:layout_width="wrap_content"
            android:text="@string/LBL_SMART"
            android:textSize="@dimen/size_general_small"
            android:textColor="@color/color_black"
            android:layout_height="wrap_content" />

        <com.elluminati.eber.driver.components.MyFontTextView
            android:id="@+id/tvVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="end"
            android:textColor="@color/color_white"
            android:textSize="@dimen/size_big_text" />


    </LinearLayout>





    </LinearLayout>
